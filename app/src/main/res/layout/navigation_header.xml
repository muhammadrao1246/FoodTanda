<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/welcome_heading"
    android:paddingLeft="25dp"
    android:paddingBottom="20dp"
    android:paddingTop="75dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/header_profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:elevation="20dp"
        android:src="@drawable/profile_picture_placeholder"
        android:clickable="true"
        android:contextClickable="true"
        />
    <TextView
        android:id="@+id/header_profile_name"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.Material3.TitleMedium"
        android:text="Muhammad Bin Zulfiqar"
        android:fontFamily="@font/merriweather_sans"
        android:textColor="@color/lightWhiteButton"
        android:textFontWeight="400"
        />
</LinearLayout>